{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "watch": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "@/src/*": [
        "src/*"
      ],
      "@/util/*": [
        "util/*"
      ],
      "@/public/*": [
        "public/*"
      ],
      "~/*": ["./*"],
      "@/*": ["./*"],
      "~~/*": ["./*"],
      "@@/*": ["./*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.js",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": ["node_modules", ".next", "dist"],
  "compileOnSave": true,
  "files": [
    "src/*.js",
    "util/*.js",
  ]
}